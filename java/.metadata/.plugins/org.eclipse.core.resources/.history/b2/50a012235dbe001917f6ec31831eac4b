package name;
import java.io.Serializable;
import java.util.Scanner;

public class Name implements Serializable{

	private static final long serialVersionUID = -867406614572692900L;
	
	private char[] firstName;
	private char[] lastName;
	Scanner sc=new Scanner(System.in);
	
	
	public Name() {
		super();
	}
	

	
	public Name(char[] firstName, char[] lastName) {
		super();
		this.firstName = firstName;
		this.lastName = lastName;
	}



	/**
	 * @return the firstName
	 */
	public char[] getFirstName() {
		return firstName;
	}



	/**
	 * @param firstName the firstName to set
	 */
	public void setFirstName(char[] firstName) {
		this.firstName = firstName;
	}



	/**
	 * @return the lastName
	 */
	public char[] getLastName() {
		return lastName;
	}



	/**
	 * @param lastName the lastName to set
	 */
	public void setLastName(char[] lastName) {
		this.lastName = lastName;
	}



	public Name newName() throws NameNotValid{
		
		
		this.firstName=fName;
		this.lastName=lName;
		System.out.println("Enter first name");
		firstName=sc.next().toCharArray();
		lastName=sc.next().toCharArray();
		if(!(Character.isUpperCase(firstName[0]) && Character.isUpperCase(lastName[0])))
		{
			throw new NameNotValid("Name not Valid");
		}
		System.out.println("ValidName");
		return new Name(fName,lName);
		
	}
	
	
	
	

}
