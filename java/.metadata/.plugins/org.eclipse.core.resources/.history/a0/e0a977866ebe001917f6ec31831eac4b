package name;
import java.io.Serializable;
import java.util.Scanner;

public class Name implements Serializable{

	private static final long serialVersionUID = -867406614572692900L;
	
	private String firstName;
	private String lastName;
	private Name first;
	private Name second;
	private char ans;
	
	Scanner sc= new Scanner(System.in);
	
	
	public Name() {
		super();
	}
	

	
	public Name(String firstName, String lastName) {
		super();
		this.firstName = firstName;
		this.lastName = lastName;
		
	}



	/**
	 * @return the firstName
	 */
	public String getFirstName() {
		return firstName;
	}



	/**
	 * @param firstName the firstName to set
	 */
	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}



	/**
	 * @return the lastName
	 */
	public String getLastName() {
		return lastName;
	}



	/**
	 * @param lastName the lastName to set
	 */
	public void setLastName(String lastName) {
		this.lastName = lastName;
	}



	public Name newName() throws AccountAlreadyExist{
		
			System.out.println("Enter first name");
			firstName=sc.next();
			System.out.println("Enter last name");
			lastName=sc.next();
			
			first=name(firstName,lastName);
			System.out.println("User Created"+first);
			
			
			
			
			do {
				System.out.println("Do you want to enter another user? (y/n)");
				ans=sc.next().charAt(0);
				System.out.println("Enter first name");
				firstName=sc.next();
				System.out.println("Enter last name");
				lastName=sc.next();
				
				second=name(firstName,lastName);
				
				
			}
			}while(ans==y);
			
			
		
	}



	private Name name(String firstName2, String lastName2) {
		this.firstName = firstName2;
		this.lastName = lastName2;
		
		return new Name(firstName,lastName);
	}



	
	
	
	

}
