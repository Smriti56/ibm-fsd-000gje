		public void push(int arr[],int item) {
			System.out.println();
			arr[index]=item;
			index++;
			for(int a:arr)
			{
				System.out.print(a+" ");
			}
		}
		
		public int pop(int arr[]) {
			System.out.println();
			int n=arr[index-1];
			index--;
			return n;
		}
		
	
		
		

	

